function findLongestWord(str) {
  
  //split string in to array
  var arr = str.split(/\s+/g);
  var len = 1;
  
  for (var i = 0; i < arr.length; i++){
    if (arr[i].length > len){
       len = arr[i].length;
    }
  }
  return len;
}

findLongestWord("The quick brown fox jumped over the lazy dog");
